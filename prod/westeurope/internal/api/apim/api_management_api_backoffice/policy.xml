<policies>
    <inbound>
        <base />
        <set-backend-service base-url="{{io-fn3-backoffice-url}}/api/v1" />
        <set-header name="x-functions-key" exists-action="override">
            <value>{{io-fn3-backoffice-key}}</value>
        </set-header>
        <choose>
            <!-- set rate limit if x-citizen-id is a fiscal code -->
            <when condition="@(Regex.Match(context.Request.Headers.GetValueOrDefault("x-citizen-id",""), @"^[A-Z]{6}[0-9LMNPQRSTUV]{2}[ABCDEHLMPRST][0-9LMNPQRSTUV]{2}[A-Z][0-9LMNPQRSTUV]{3}[A-Z]$").Success && !Regex.Match(context.Request.Url.Path, @"/backoffice/bpd/payment-instruments/[0-9a-f]{64}").Success)">
                <rate-limit-by-key calls="8" renewal-period="60" counter-key="@(context.Request.Headers.GetValueOrDefault("Authorization","").AsJwt()?.Subject)" />
            </when>
        </choose>
        <cors>
            <allowed-origins>
                <origin>https://backoffice.io.italia.it</origin>
            </allowed-origins>
            <allowed-methods>
                <method>POST</method>
                <method>OPTIONS</method>
                <method>GET</method>
            </allowed-methods>
            <allowed-headers>
                <header>contentType</header>
                <header>Authorization</header>
                <header>X-Citizen-Id</header>
            </allowed-headers>
        </cors>
    </inbound>
    <outbound>
        <base />
        <set-header name="cache-control" exists-action="override">
            <value>no-store</value>
        </set-header>
    </outbound>
</policies>